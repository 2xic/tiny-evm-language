        // Load in the first offset
        PUSH1 4;
        DUP1;
        CALLDATALOAD;
        ADD;
        PUSH1 64;
        MSTORE;    

        //  0, 32 -> indexes
        // 64, 96 -> Locations

        // Now we also load in the size pointer to slot 2
        PUSH1 36;
        CALLDATALOAD;
        PUSH1 4;
        ADD;
        PUSH1 96;
        MSTORE; 

        // Now we specify the length
        PUSH1 64;
        MLOAD;
        CALLDATALOAD;
